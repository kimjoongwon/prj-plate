{
  "name": "core",
  "private": true,
  "version": "0.0.0",
  "packageManager": "pnpm@10.16.0",
  "scripts": {
    "build": "turbo build",
    "build:server": "turbo build --filter=server",
    "build:admin": "turbo build --filter=admin",
    "build:storybook": "turbo build --filter=storybook",
    "build:packages": "turbo build --filter='./packages/**'",
    "build:pkg": "turbo build --filter",
    "clean": "turbo clean",
    "type-check": "turbo type-check",
    "start:dev": "turbo start:dev",
    "start:server": "turbo start:dev --filter=server... --concurrency=20",
    "start:server:dev": "bash scripts/redis-port-forward.sh",
    "start:admin": "turbo start:dev --filter=admin",
    "start:storybook": "turbo start:dev --filter=storybook",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "turbo format",
    "test": "turbo test",
    "analyze:components": "./node_modules/.bin/tsx apps/agent/src/scripts/analyze-components.ts",
    "version:patch": "pnpm -r --filter './packages/**' exec npm version patch --no-git-tag-version",
    "version:minor": "pnpm -r --filter './packages/**' exec npm version minor --no-git-tag-version",
    "version:major": "pnpm -r --filter './packages/**' exec npm version major --no-git-tag-version",
    "version:pkg": "node scripts/version-pkg.js",
    "publish:packages": "pnpm -r --filter './packages/**' publish --access public --no-git-checks",
    "publish:dry": "pnpm -r --filter './packages/**' publish --access public --no-git-checks --dry-run",
    "update:app-deps": "node scripts/update-app-deps.js",
    "bundle:size": "node scripts/analyze-bundle-size.js",
    "bundle:sizes": "node scripts/show-bundle-sizes.js",
    "release:patch": "pnpm version:patch && pnpm build:packages && pnpm publish:packages && pnpm update:app-deps",
    "release:minor": "pnpm version:minor && pnpm build:packages && pnpm publish:packages && pnpm update:app-deps",
    "release:major": "pnpm version:major && pnpm build:packages && pnpm publish:packages && pnpm update:app-deps",
    "release:pkg": "node scripts/release-pkg.js"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "vite": "catalog:",
    "@vitejs/plugin-react-swc": "catalog:",
    "vitest": "catalog:",
    "@vitest/ui": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "typescript": "catalog:",
    "@types/node": "catalog:"
  },
  "pnpm": {
    "overrides": {
      "thread-stream": "^4.0.0",
      "pino": "^9.11.0",
      "sonic-boom": "^4.2.0"
    }
  }
}
