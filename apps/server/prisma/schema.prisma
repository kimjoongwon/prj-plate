model Page {
  id        String    @id @default(cuid())
  name      String    @unique
  pathname  String    @unique
  subjectId String
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt @db.Timestamptz(6)
  deletedAt DateTime? @db.Timestamptz(6)
}

enum SubjectConditions {
  Equal
  GreaterThan
  GreaterThanOrEqual
  LessThan
  LessThanOrEqual
  In
}

