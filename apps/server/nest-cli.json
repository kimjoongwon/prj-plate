{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "./.env",
        "outDir": "./dist"
      }
    ],
    "tsConfigPath": "tsconfig.build.json",
    "deleteOutDir": true,
    "builder": {
      "type": "swc",
      "options": {
        "watch": true
      }
    }
  }
}
