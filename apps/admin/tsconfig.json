{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "src",
    "paths": {
      "@links": ["app/shared/links/index.ts"],
      "@components": ["app/shared/components/index.ts"],
      "@hooks": ["app/shared/hooks/index.ts"],
      "@constants": ["app/shared/constants/index.ts"],
      "@utils": ["app/shared/utils/index.ts"]
    }
  },
  "include": [
    "./src/__generated__/**/*.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "./src/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
