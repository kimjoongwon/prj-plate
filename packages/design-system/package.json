{
  "name": "@cocrepo/design-system",
  "version": "1.0.1",
  "description": "Design system with HeroUI theme, tokens, and providers",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./hero": {
      "types": "./hero.ts",
      "import": "./hero.ts",
      "default": "./hero.ts"
    },
    "./styles": "./src/styles/base.css",
    "./package.json": "./package.json"
  },
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "files": [
    "src",
    "hero.ts",
    "README.md"
  ],
  "scripts": {
    "build": "echo 'Build not needed - using source files directly'",
    "start:dev": "echo 'Development mode - no build needed'",
    "lint": "echo 'Linting skipped for now'",
    "format": "biome format --write .",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .turbo && rm -rf node_modules"
  },
  "author": "kimjoongwon",
  "license": "ISC",
  "dependencies": {
    "@heroui/react": "catalog:",
    "@heroui/use-theme": "catalog:"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "tailwindcss": "catalog:",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "react": "catalog:",
    "react-dom": "catalog:",
    "tailwindcss": "^4.0.0"
  }
}
