{
  "name": "@cocrepo/repository",
  "version": "0.1.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "Repository 패턴 구현 패키지",
  "files": [
    "dist",
    "README.md"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "type-check": "tsc --noEmit",
    "build": "tsc",
    "start:dev": "tsc --watch",
    "format": "biome format --write .",
    "clean": "rm -rf dist && rm -rf node_modules"
  },
  "dependencies": {
    "@cocrepo/prisma": "workspace:*",
    "@cocrepo/entity": "workspace:*",
    "class-transformer": "^0.5.1"
  },
  "peerDependencies": {
    "@nestjs/common": "^11.1.3"
  },
  "devDependencies": {
    "@nestjs/common": "^11.1.3",
    "@types/node": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:"
  }
}
