{
  "compilerOptions": {
    // Module system
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",

    // Declaration files
    "declaration": true,
    "declarationMap": true,

    // Output configuration
    "outDir": "./dist",
    "sourceMap": true,
    "removeComments": true,

    // Type checking
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // ES features
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    // Decorators (for potential future use)
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    // Paths (if needed for internal imports)
    "paths": {
      "@/*": ["./src/*"]
    },
    "ignoreDeprecations": "5.0"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
