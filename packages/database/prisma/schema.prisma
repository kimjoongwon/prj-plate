generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String
  profileId String
  profile   Profile   @relation(fields: [profileId], references: [id])
  deletedAt DateTime? @db.Timestamptz(6)
  updatedAt DateTime? @updatedAt @db.Timestamptz(6)
  createdAt DateTime  @default(now()) @db.Timestamptz(6)
  Tenant    Tenant[]
  Space     Space[]
}

model Category {
  id             String       @id @default(cuid())
  name           Json         @unique
  serviceId      String
  service        Service      @relation(fields: [serviceId], references: [id])
  categoryItemId String
  categoryItem   CategoryItem @relation(fields: [categoryItemId], references: [id])
  tenantId       String

  createdAt DateTime  @default(now()) @db.Timestamptz(6)
  updatedAt DateTime? @updatedAt @db.Timestamptz(6)
  deletedAt DateTime? @db.Timestamptz(6)
}

model Group {
  id        String    @id @default(cuid())
  name      Json
  serviceId String
  service   Service   @relation(fields: [serviceId], references: [id])
  itemId    String
  tenantId  String
  createdAt DateTime  @default(now()) @db.Timestamptz(6)
  updatedAt DateTime? @updatedAt @db.Timestamptz(6)
  deletedAt DateTime? @db.Timestamptz(6)
}

model CategoryItem {
  id          String     @id @default(cuid())
  name        String
  tag         String
  ancestorIds String[]
  parentId    String?
  tenantId    String
  createdAt   DateTime   @default(now()) @db.Timestamptz(6)
  updatedAt   DateTime?  @updatedAt @db.Timestamptz(6)
  deletedAt   DateTime?  @db.Timestamptz(6)
  category    Category[]
}

model Service {
  id        String     @id @default(cuid())
  name      String     @unique
  createdAt DateTime   @default(now()) @db.Timestamptz(6)
  updatedAt DateTime?  @updatedAt @db.Timestamptz(6)
  deletedAt DateTime?  @db.Timestamptz(6)
  category  Category[]
  group     Group[]
}

model Profile {
  id        String    @id @default(cuid())
  nickname  String
  phone     String    @unique
  userId    String    @unique
  roleId    String
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt @db.Timestamptz(6)
  deletedAt DateTime? @db.Timestamptz(6)
  users     User[]
}

model Role {
  id          String    @id @default(cuid())
  name        Roles     @default(USER)
  accessPages String[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime? @updatedAt @db.Timestamptz(6)
  deletedAt   DateTime? @db.Timestamptz(6)
}

model Tenant {
  id        String    @id @default(cuid())
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  spaceId   String
  space     Space     @relation(fields: [spaceId], references: [id])
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt @db.Timestamptz(6)
  deletedAt DateTime? @db.Timestamptz(6)
}

model Classification {
  id         String    @id @default(cuid())
  serviceId  String
  categoryId String
  itemId     String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime? @updatedAt @db.Timestamptz(6)
  deletedAt  DateTime? @db.Timestamptz(6)
}

model Space {
  id        String    @id @default(cuid())
  ownerId   String
  owner     User      @relation(fields: [ownerId], references: [id])
  name      String    @unique
  phone     String    @db.Char(11)
  address   String
  createdAt DateTime  @default(now()) @db.Timestamptz(6)
  updatedAt DateTime? @updatedAt @db.Timestamptz(6)
  deletedAt DateTime? @db.Timestamptz(6)
  tenant    Tenant[]
}

model EmailTemplate {
  id        String    @id @default(cuid())
  name      String    @unique
  subject   String
  content   String
  createdAt DateTime  @default(now()) @db.Timestamptz(6)
  updatedAt DateTime? @updatedAt @db.Timestamptz(6)
  deletedAt DateTime? @db.Timestamptz(6)
}

model Translation {
  id        String    @id @default(cuid())
  name      String    @unique
  content   String
  createdAt DateTime  @default(now()) @db.Timestamptz(6)
  updatedAt DateTime? @updatedAt @db.Timestamptz(6)
  deletedAt DateTime? @db.Timestamptz(6)
}

enum EmailTemplates {
  REGISTER
  FORGET_PASSWORD
}

enum Roles {
  USER
  SUPER_ADMIN
}
