generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String
  profileId String
  profile   Profile   @relation(fields: [profileId], references: [id])
  deletedAt DateTime? @db.Timestamptz(6)
  updatedAt DateTime? @updatedAt @db.Timestamptz(6)
  createdAt DateTime  @default(now()) @db.Timestamptz(6)
  member    Member[]
}

model Category {
  id              String       @id @default(cuid())
  name            String       @unique
  serviceId       String
  service         Service      @relation(fields: [serviceId], references: [id])
  itemId          String
  userWorkspaceId String // 필터링 기준점
  item            CategoryItem @relation(fields: [itemId], references: [id])
  createdAt       DateTime     @default(now()) @db.Timestamptz(6)
  updatedAt       DateTime?    @updatedAt @db.Timestamptz(6)
  deletedAt       DateTime?    @db.Timestamptz(6)
}

model UserWorkspace {
  id          String @id @default(cuid())
  userId      String
  roleId      String
  workspaceId String
}

model Group {
  id          String    @id @default(cuid())
  name        String
  serviceId   String
  service     Service   @relation(fields: [serviceId], references: [id])
  itemId      String
  userWorkspaceId String // 필터링 기준점
  createdAt   DateTime  @default(now()) @db.Timestamptz(6)
  updatedAt   DateTime? @updatedAt @db.Timestamptz(6)
  deletedAt   DateTime? @db.Timestamptz(6)
}

model CategoryItem {
  id          String     @id @default(cuid())
  name        String
  tag         String
  ancestorIds String[]
  parentId    String?
  memberId    String
  workspaceId String // 필터링 기준점
  createdAt   DateTime   @default(now()) @db.Timestamptz(6)
  updatedAt   DateTime?  @updatedAt @db.Timestamptz(6)
  deletedAt   DateTime?  @db.Timestamptz(6)
  category    Category[]
}

model Service {
  id          String     @id @default(cuid())
  name        String     @unique
  workspaceId String
  createdAt   DateTime   @default(now()) @db.Timestamptz(6)
  updatedAt   DateTime?  @updatedAt @db.Timestamptz(6)
  deletedAt   DateTime?  @db.Timestamptz(6)
  category    Category[]
  group       Group[]
}

model Profile {
  id        String    @id @default(cuid())
  phone     String    @unique
  nickname  String
  userId    String    @unique
  roleId    String
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt @db.Timestamptz(6)
  deletedAt DateTime? @db.Timestamptz(6)
  user      User[]
}

model Role {
  id          String    @id @default(cuid())
  name        Roles     @default(USER)
  accessPages String[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime? @updatedAt @db.Timestamptz(6)
  deletedAt   DateTime? @db.Timestamptz(6)
  member      Member[]
}

model Member {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  roleId      String
  role        Role      @relation(fields: [roleId], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime? @updatedAt @db.Timestamptz(6)
  deletedAt   DateTime? @db.Timestamptz(6)
}

model Workspace {
  id             String    @id @default(cuid())
  name           String    @unique
  phone          String    @db.Char(11)
  address        String
  businessNumber String    @db.Char(10)
  createdAt      DateTime  @default(now()) @db.Timestamptz(6)
  updatedAt      DateTime? @updatedAt @db.Timestamptz(6)
  deletedAt      DateTime? @db.Timestamptz(6)
  member         Member[]
}

enum Roles {
  USER
  SUPER_ADMIN
}
