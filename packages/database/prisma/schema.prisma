generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  name      String
  email     String    @unique
  password  String
  deletedAt DateTime? @db.Timestamptz(6)
  updatedAt DateTime? @updatedAt @db.Timestamptz(6)
  createdAt DateTime  @default(now()) @db.Timestamptz(6)
  tenants   Tenant[]
  profiles  Profile[]
}

model Profile {
  id        String    @id @default(cuid())
  nickname  String
  phone     String    @unique
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt @db.Timestamptz(6)
  deletedAt DateTime? @db.Timestamptz(6)
}

model Category {
  id             String       @id @default(cuid())
  name           String       @unique
  serviceId      String
  service        Service      @relation(fields: [serviceId], references: [id])
  categoryItemId String
  categoryItem   CategoryItem @relation(fields: [categoryItemId], references: [id])
  tenantId       String
  createdAt      DateTime     @default(now()) @db.Timestamptz(6)
  updatedAt      DateTime?    @updatedAt @db.Timestamptz(6)
  deletedAt      DateTime?    @db.Timestamptz(6)
}

model Group {
  id        String    @id @default(cuid())
  name      String
  serviceId String
  service   Service   @relation(fields: [serviceId], references: [id])
  tenantId  String
  createdAt DateTime  @default(now()) @db.Timestamptz(6)
  updatedAt DateTime? @updatedAt @db.Timestamptz(6)
  deletedAt DateTime? @db.Timestamptz(6)
}

model CategoryItem {
  id          String     @id @default(cuid())
  name        String
  tag         String
  ancestorIds String[]
  parentId    String?
  tenantId    String
  createdAt   DateTime   @default(now()) @db.Timestamptz(6)
  updatedAt   DateTime?  @updatedAt @db.Timestamptz(6)
  deletedAt   DateTime?  @db.Timestamptz(6)
  category    Category[]
}

model Service {
  id        String     @id @default(cuid())
  name      String     @unique
  createdAt DateTime   @default(now()) @db.Timestamptz(6)
  updatedAt DateTime?  @updatedAt @db.Timestamptz(6)
  deletedAt DateTime?  @db.Timestamptz(6)
  category  Category[]
  group     Group[]
}

model Role {
  id        String    @id @default(cuid())
  name      Roles     @default(USER)
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt @db.Timestamptz(6)
  deletedAt DateTime? @db.Timestamptz(6)
  tenants   Tenant[]
}

model Tenant {
  id        String    @id @default(cuid())
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  spaceId   String
  space     Space     @relation(fields: [spaceId], references: [id])
  roleId    String
  role      Role      @relation(fields: [roleId], references: [id])
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt @db.Timestamptz(6)
  deletedAt DateTime? @db.Timestamptz(6)
}

model Classification {
  id         String    @id @default(cuid())
  serviceId  String
  categoryId String
  itemId     String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime? @updatedAt @db.Timestamptz(6)
  deletedAt  DateTime? @db.Timestamptz(6)
}

model Space {
  id        String    @id @default(cuid())
  name      String    @unique
  phone     String    @db.Char(11)
  address   String
  createdAt DateTime  @default(now()) @db.Timestamptz(6)
  updatedAt DateTime? @updatedAt @db.Timestamptz(6)
  deletedAt DateTime? @db.Timestamptz(6)
  tenants   Tenant[]
}

model EmailTemplate {
  id        String    @id @default(cuid())
  name      String    @unique
  subject   String
  content   String
  createdAt DateTime  @default(now()) @db.Timestamptz(6)
  updatedAt DateTime? @updatedAt @db.Timestamptz(6)
  deletedAt DateTime? @db.Timestamptz(6)
}

enum EmailTemplates {
  REGISTER
  FORGET_PASSWORD
}

enum Roles {
  USER
  SUPER_ADMIN
}
