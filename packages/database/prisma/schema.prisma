generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String
  profileId String
  profile   Profile   @relation(fields: [profileId], references: [id])
  deletedAt DateTime? @db.Timestamptz(6)
  updatedAt DateTime? @updatedAt @db.Timestamptz(6)
  createdAt DateTime  @default(now()) @db.Timestamptz(6)
  member    Member[]
}

model Category {
  id                      String                    @id @default(cuid())
  name                    String                    @unique
  serviceId               String
  service                 Service                   @relation(fields: [serviceId], references: [id])
  itemId                  String
  item                    CategoryItem              @relation(fields: [itemId], references: [id])
  createdAt               DateTime                  @default(now()) @db.Timestamptz(6)
  updatedAt               DateTime?                 @updatedAt @db.Timestamptz(6)
  deletedAt               DateTime?                 @db.Timestamptz(6)
  group                   Group[]
  workspaceClassification WorkspaceClassification[]
}

model WorkspaceClassification {
  id          String    @id @default(cuid())
  name        String    @unique
  categoryId  String
  category    Category  @relation(fields: [categoryId], references: [id])
  serviceId   String
  service     Service   @relation(fields: [serviceId], references: [id])
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  createdAt   DateTime  @default(now()) @db.Timestamptz(6)
  updatedAt   DateTime? @updatedAt @db.Timestamptz(6)
  deletedAt   DateTime? @db.Timestamptz(6)
}

model WorkspaceGroup {
  id          String    @id @default(cuid())
  name        String
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  createdAt   DateTime  @default(now()) @db.Timestamptz(6)
  updatedAt   DateTime? @updatedAt @db.Timestamptz(6)
  deletedAt   DateTime? @db.Timestamptz(6)
}

model Group {
  id         String    @id @default(cuid())
  name       String
  serviceId  String
  service    Service   @relation(fields: [serviceId], references: [id])
  categoryId String
  category   Category  @relation(fields: [categoryId], references: [id])
  createdAt  DateTime  @default(now()) @db.Timestamptz(6)
  updatedAt  DateTime? @updatedAt @db.Timestamptz(6)
  deletedAt  DateTime? @db.Timestamptz(6)
}

model CategoryItem {
  id          String     @id @default(cuid())
  name        String
  tag         String
  ancestorIds String[]
  parentId    String?
  createdAt   DateTime   @default(now()) @db.Timestamptz(6)
  updatedAt   DateTime?  @updatedAt @db.Timestamptz(6)
  deletedAt   DateTime?  @db.Timestamptz(6)
  category    Category[]
}

model Service {
  id                      String                    @id @default(cuid())
  name                    String                    @unique
  createdAt               DateTime                  @default(now()) @db.Timestamptz(6)
  updatedAt               DateTime?                 @updatedAt @db.Timestamptz(6)
  deletedAt               DateTime?                 @db.Timestamptz(6)
  category                Category[]
  group                   Group[]
  member                  Member[]
  workspaceClassification WorkspaceClassification[]
}

model Profile {
  id        String    @id @default(cuid())
  phone     String    @unique
  nickname  String
  userId    String    @unique
  roleId    String
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt @db.Timestamptz(6)
  deletedAt DateTime? @db.Timestamptz(6)
  user      User[]
}

model Role {
  id          String    @id @default(cuid())
  name        Roles     @default(USER)
  accessPages String[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime? @updatedAt @db.Timestamptz(6)
  deletedAt   DateTime? @db.Timestamptz(6)
  member      Member[]
}

model Member {
  id          String    @id @default(cuid())
  serviceId   String
  service     Service   @relation(fields: [serviceId], references: [id])
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  roleId      String
  role        Role      @relation(fields: [roleId], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime? @updatedAt @db.Timestamptz(6)
  deletedAt   DateTime? @db.Timestamptz(6)
}

model Workspace {
  id                      String                    @id @default(cuid())
  name                    String                    @unique
  phone                   String                    @db.Char(11)
  address                 String
  businessNumber          String                    @db.Char(10)
  createdAt               DateTime                  @db.Timestamptz(6)
  updatedAt               DateTime?                 @updatedAt @db.Timestamptz(6)
  deletedAt               DateTime?                 @db.Timestamptz(6)
  member                  Member[]
  workspaceClassification WorkspaceClassification[]
  workspaceGroup          WorkspaceGroup[]
}

enum Roles {
  USER
  SUPER_ADMIN
}
