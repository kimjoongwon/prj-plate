{
  "name": "@shared/schema",
  "version": "0.0.1",
  "private": true,
  "description": "Shared schema, DTOs and entities for the core project",
  "main": "./src/index.ts",
  "files": [
    "dist/**/*",
    "prisma/**/*"
  ],
  "scripts": {
    "build": "pnpm run generate && tsup",
    "dev": "pnpm run generate && NODE_ENV=development tsup",
    "start:dev": "pnpm run generate:safe && tsup --watch",
    "type-check": "tsc --noEmit",
    "generate": "prisma generate",
    "generate:safe": "prisma generate || echo 'Prisma generate failed, continuing...'",
    "db:push": "prisma db push",
    "db:pull": "prisma db pull",
    "db:studio": "prisma studio",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:reset": "prisma migrate reset",
    "db:seed": "ts-node prisma/seed.ts",
    "clean": "rm -rf dist && rm -rf node_modules",
    "test": "vitest",
    "test:ui": "vitest --ui"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts",
    "schema": "./prisma"
  },
  "dependencies": {
    "@shared/types": "workspace:*",
    "@prisma/client": "^6.11.1",
    "bcrypt": "^6.0.0",
    "@nestjs/common": "^11.1.3",
    "@nestjs/swagger": "^11.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "reflect-metadata": "^0.2.2",
    "ts-jenum": "^2.2.2",
    "lodash": "^4.17.21",
    "libphonenumber-js": "^1.12.10",
    "remeda": "^2.26.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^24.0.14",
    "@types/lodash": "^4.17.20",
    "concurrently": "^9.2.0",
    "prisma": "^6.11.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js",
      "require": "./dist/client.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js",
      "require": "./dist/types.js"
    }
  }
}
